<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.islamijindegi.islamijindegi.ActivitySetting">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/databaseSetting1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clearDatabase"
            android:layout_alignParentLeft="true"
            android:text="@string/clear_database"
            style="@style/setting_text"
            android:layout_centerInParent="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clearButton"
            android:layout_alignParentRight="true"
            android:text="Delete"

            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/databaseSetting2"
        android:layout_below="@+id/databaseSetting1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/syncDatabase"
            android:layout_alignParentLeft="true"
            android:text="@string/sync_database"
            style="@style/setting_text"
            android:layout_centerInParent="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/syncButton"
            android:layout_alignParentRight="true"
            android:text="Sync"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/getTokenTV"
        android:text="Register for notification"
        android:layout_below="@id/databaseSetting2"
        style="@style/setting_text"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:visibility="gone"/>



</RelativeLayout>
