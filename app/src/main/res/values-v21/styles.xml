<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="spinner_style_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_border</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ok_button">
        <item name="android:padding">2dp</item>
        <item name="android:background">#7cc47c</item>

    </style>

    <style name="salatTxtStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFF</item>


    </style>

    <style name="salatLayout">
        <item name="android:background">@drawable/salat_text_bg</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

    <style name="iconSize">
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_width">26dp</item>
    </style>

    <style name="setting_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>

    </style>


</resources>
